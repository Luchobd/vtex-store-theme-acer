  // info card right
  "info-card#home__infocard--card-right": {
    "title": "infocard right",
    "props": {
      "id": "info-card-example",
      "isFullModeStyle": true,
      "imageUrl": "assets/img/infocard-two.webp",
      "imageActionUrl": "/prueba/",
      "headline": "Ofertas Para Empresas",
      "blockClass": "infocard__ofert--right",
      "textPosition": "center",
      "textAlignment": "center"
    }
