      "info-card#home__infocard--card-left",
      "info-card#home__infocard--card-right"
    ],
    "props": {
      "blockClass": "infocard__ofert"
    }
  },

  // info card left
  "info-card#home__infocard--card-left": {
    "title": "infocard left",
    "props": {
      "id": "info-card-example",
